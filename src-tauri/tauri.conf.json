{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "DataBridge",
  "version": "0.7.3",
  "identifier": "dev.databridge",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run auth:build && npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "DataBridge",
        "label": "main",
        "width": 1280,
        "height": 800,
        "minWidth": 720,
        "minHeight": 400,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://* http://localhost:*; img-src 'self' data: https://*"
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "vana"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "dmg",
      "app",
      "nsis",
      "appimage",
      "deb"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../connectors/*": "connectors/",
      "../connectors/linkedin/**/*": "connectors/linkedin/",
      "../connectors/meta/**/*": "connectors/meta/",
      "../connectors/openai/**/*": "connectors/openai/",
      "../connectors/spotify/**/*": "connectors/spotify/",
      "../playwright-runner/dist/*": "playwright-runner/dist/",
      "../personal-server/dist/personal-server*": "personal-server/dist/",
      "auth-page/*": "auth-page/",
      "auth-page/assets/*": "auth-page/assets/",
      "auth-page/fonts/*": "auth-page/fonts/"
    },
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  }
}
