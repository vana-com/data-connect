{
  "name": "LinkedIn Skills",
  "version": "2.0.0",
  "scope": "linkedin.skills",
  "dialect": "json",
  "description": "Skills listed on LinkedIn profile with endorsement counts",
  "schema": {
    "type": "object",
    "properties": {
      "skills": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "endorsements": { "type": "string" }
          },
          "required": ["name"],
          "additionalProperties": false
        }
      }
    },
    "required": ["skills"],
    "additionalProperties": false
  }
}
