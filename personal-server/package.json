{
  "name": "databridge-personal-server",
  "version": "1.0.0",
  "description": "Personal Server wrapper for DataBridge",
  "main": "index.cjs",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "start:cjs": "node index.cjs",
    "build": "node scripts/build.js"
  },
  "pkg": {
    "assets": [
      "node_modules/@opendatalabs/personal-server-ts-*/dist/**/*",
      "node_modules/@opendatalabs/personal-server-ts-*/package.json",
      "node_modules/@hono/node-server/dist/**/*",
      "node_modules/@hono/node-server/package.json",
      "node_modules/hono/**/*"
    ],
    "targets": [
      "node22-macos-arm64",
      "node22-macos-x64",
      "node22-win-x64",
      "node22-linux-x64"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@opendatalabs/personal-server-ts-core": "^0.0.1-canary.b04d0fb",
    "@opendatalabs/personal-server-ts-server": "^0.0.1-canary.b04d0fb",
    "better-sqlite3": "^12.6.2"
  },
  "devDependencies": {
    "@yao-pkg/pkg": "^5.12.0",
    "esbuild": "^0.27.2"
  }
}
